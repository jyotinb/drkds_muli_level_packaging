<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Package Label Report -->
    <record id="action_report_package_label" model="ir.actions.report">
        <field name="name">Package Label</field>
        <field name="model">stock.quant.package</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">advanced_auto_packaging.report_package_label</field>
        <field name="report_file">advanced_auto_packaging.report_package_label</field>
        <field name="print_report_name">'Package Label - %s' % (object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_quant_package"/>
        <field name="binding_type">report</field>
    </record>

    <!-- Package Content Report -->
    <record id="action_report_package_content" model="ir.actions.report">
        <field name="name">Package Content</field>
        <field name="model">stock.quant.package</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">advanced_auto_packaging.report_package_content</field>
        <field name="report_file">advanced_auto_packaging.report_package_content</field>
        <field name="print_report_name">'Package Content - %s' % (object.name)</field>
        <field name="binding_model_id" ref="stock.model_stock_quant_package"/>
        <field name="binding_type">report</field>
    </record>
</odoo>